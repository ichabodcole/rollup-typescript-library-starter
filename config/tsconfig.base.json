{
    "compilerOptions": {
        "lib": [
            "dom"
        ],
        "moduleResolution": "node",
        "target": "ES2015",
        "module": "ES2015",
        "strict": true,
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "baseUrl": ".",
    },
}